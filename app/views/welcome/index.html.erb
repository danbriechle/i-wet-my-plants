<div class="logo_one">
  <%= image_tag("iwmp_logo.jpg", :alt => "I Wet My Plants Cartoon", :height => "300", :style => "border-radius: 50%;") %>
</div>

<div class="logo_two">
  <%= image_tag("iwmp.jpg", :alt => "I Wet My Plants Logo", :height => "90", :style => "border-radius: 70%;") %>
</div>

<div class="welcome_text">
  <h3>"I Wet My Plants is an app that helps you remember to water the plants in your garden, and send you a friendly reminder if you forget."</h3>
</div>

<div class="welcome_buttons">
  <% if current_user %>
    <p>Hello, <%= current_user.name %></p>
  <% else %>
    <%= link_to 'Sign in with Twitter', twitter_login_path, class: "btn btn-outline-primary btn-lg" %>
  <% end  %>
</div>
